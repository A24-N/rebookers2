<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>user info</h2>
      <%= render 'info', user_info: @user %>

      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @nbook %>
    </div>

    <div class="col-md-8 offset-md-1">
    <h2>books</h2>
    <table class="table">
      <thead>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= image_tag @user.get_profile_image(80,80) %></td>
          <td>
            <%= link_to book_path(book) do %>
              <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>